---
interface Props {
  bg:
    | "gradient-bg-purple"
    | "gradient-bg-blue"
    | "gradient-bg-green"
    | "gradient-bg-orange"
    | "gradient-bg-pink";
  height?: string;
  className?: string;
  spanBgClass: string;
}

const {
  bg,
  height = "58.42778793418647%",
  className,
  spanBgClass,
} = Astro.props;
---

<section
  class={`${className} section py-[var(--section-padding)] relative rounded-[60px] will-change`}
>
  <span
    class={`${bg} ${spanBgClass} absolute left-0 top-0 w-full h-full bg-bottom bg-no-repeat bg-[length:100%_var(--bg-height)] opacity-0 z-0 transition-opacity duration-750 ease-in-out overflow-hidden rounded-[60px]`}
    style={`--bg-height: ${height}; opacity: 0;`}></span>
  <slot />
</section>

<style>
  .section-scenario.will-change .gradient-bg {
    will-change: opacity;
  }

  .gradient-bg-purple {
    background-image: linear-gradient(
      180deg,
      #fbfbfd,
      #e795b7 20%,
      #935893 45%,
      #224d88
    );
  }

  .gradient-bg-blue {
    background-image: linear-gradient(
      180deg,
      #fbfbfd,
      #b2e1ea 20%,
      #415f96 45%,
      #39207d
    );
  }

  .gradient-bg-green {
    background-image: linear-gradient(
      180deg,
      #fbfbfd,
      #68d8c8 20%,
      #327295 45%,
      #0e2c72
    );
  }

  .gradient-bg-orange {
    background-image: linear-gradient(
      180deg,
      #fbfbfd,
      #ec8580 20%,
      #613b91 45%,
      #142f6d
    );
  }

  .gradient-bg-pink {
    background-image: linear-gradient(
      180deg,
      #fbfbfd,
      #e181c0 20%,
      #4b4294 45%,
      #0b1432
    );
  }

  .will-change .parallax-this.fade-it {
    will-change: opacity;
  }
</style>
